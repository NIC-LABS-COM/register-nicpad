<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.f" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" controllerName="sap.ui.demo.todo.controller.PersonEdit" displayBlock="false">
    <Page id="pagePersonEdit" showNavButton="true" navButtonPress=".onNavBack">
        <headerContent>
            <Button id="buttonCancel" text="{i18n>buttonCancel}" press="onCancel" icon="sap-icon://decline" type="Transparent" />
            <Button id="buttonSave" text="{i18n>buttonSave}" press="onSave" icon="sap-icon://save" type="Transparent" />
        </headerContent>
        <content>
            <VBox class="sapUiSmallMargin" fitContainer="false" justifyContent="Center" alignItems="Center" alignContent="Center">
                <Title level="H1" text="{i18n>titleRegister}" />
                <form:SimpleForm id="SimpleFormDisplay354">
                    <form:content>
                        <Input id="inputPersonName" value="{personModel>/name}" placeholder="{i18n>placeHolderFirstName}" maxLength="255" width="16rem" />
                        <Input id="inputBirth" value="{personModel>/birth}" type="Date" maxLength="35" submit="onRegister" width="16rem" required="true" />
                        <MaskInput id="maskInputCpf" value="{personModel>/cpf}" mask="999.999.999-99" placeholderSymbol="_" placeholder="CPF" width="16rem" />
                        <MaskInput id="inputRg" value="{personModel>/rg}" submit="onRegister"
                            mask="AA-99.999.999" placeholder="RG" placeholderSymbol="_" width="16rem" required="true">
                            <rules>
                                <MaskInputRule maskFormatSymbol="A" regex="[A-Za-z]" />
                                <MaskInputRule maskFormatSymbol="9" regex="[0-9]" />
                            </rules>
                                </MaskInput>                       
                        <MaskInput id="inputPhone" value="{personModel>/phone}" type="Number" maxLength="10" submit="onRegister" mask="+55 (99) 99999-9999" placeholder="Telefone" placeholderSymbol="_" width="16rem" required="true" />
                        <MaskInput id="inputZipCode" value="{personModel>/zipCode}" maxLength="8" submit="onRegister" mask="99.999-999" placeholder="CEP" placeholderSymbol="_" width="16rem" required="true" />
                        <Input id="inputAddres" value="{personModel>/addres}" maxLength="255" submit="onRegister" placeholder="EndereÃ§o Completo" width="16rem" required="true" />
                        <Input id="inputUser" value="{personModel>/user}" type="text" submit="onRegister" placeholder="{i18n>placeHolderUser}" width="16rem" required="true" />
                        <Input id="inputUserCheck" value="{personModel>/userCheck}" type="Email" submit="onRegister" placeholder="{i18n>placeHolderUserCheck}" width="16rem" required="true" />
                        <Input id="inputOffice" value="{personModel>/office}" submit="onRegister" placeholder="{i18n>placeHolderOffice}" width="16rem" required="true" />
                         <Select id="inputPerson" selectedKey="{personModel>/personType}" mask="Tipo de Pessoa" width="16rem" required="true" >
                            <core:Item key="Tipo de Pessoa" text="Tipo de Pessoa" />
                            <core:Item key="" text="Interna" />
                            <core:Item key="" text="Externa" />
                        </Select>
                        <Input id="inputModule" value="{personModel>/module}" submit="onRegister" placeholder="{i18n>placeHolderModule}" width="16rem" required="true" />
                        <Input id="inputProject" value="{personModel>/project}" type="text" submit="onRegister" placeholder="{i18n>placeHolderProject}" width="16rem" required="true" />
                        <Input id="inputManager" value="{personModel>/manager}" type="text" submit="onRegister" placeholder="{i18n>placeHolderManager}" width="16rem" required="true" />
                        <Input id="inputWorkplace" value="{personModel>/workplace}" type="text" submit="onRegister" placeholder="{i18n>placeHolderWorkplace}" width="16rem" required="true" />
                        <Input id="inputSapID" value="{personModel>/sapID}" type="text" submit="onRegister" placeholder="{i18n>placeHolderSapID}" width="16rem" required="true" />
                    </form:content>
                </form:SimpleForm>
            </VBox>
        </content>
    </Page>
</mvc:View>
